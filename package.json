{
    "name": "epub-optimizer",
    "version": "1.0.0",
    "description": "EPUB optimization script to compress HTML, CSS, images and recompress the archive",
    "main": "optimize-epub.js",
    "bin": {
        "epub-optimize": "./optimize-epub.js"
    },
    "scripts": {
        "optimize": "node optimize-epub.js",
        "optimize:keep": "KEEP_TEMP=true node optimize-epub.js",
        "fix": "node scripts/fix_span_tags.js && node scripts/fix_xml.js",
        "create-epub": "node scripts/create_epub.js",
        "validate": "node scripts/validate_epub.js",
        "build": "pnpm optimize:keep -- && pnpm fix && pnpm create-epub && pnpm validate",
        "cleanup": "rm -rf temp_epub fixed_mybook.epub",
        "build-clean": "pnpm build -- && pnpm cleanup",
        "test": "echo \"Error: no test specified\" && exit 1",
        "lint": "biome check .",
        "format": "biome format ."
    },
    "author": "kiki-le-singe",
    "license": "MIT",
    "dependencies": {
        "archiver": "^5.3.1",
        "cheerio": "^1.0.0",
        "clean-css": "^5.3.2",
        "fs-extra": "^11.2.0",
        "html-minifier-terser": "^7.2.0",
        "path": "^0.12.7",
        "sharp": "^0.34.1",
        "unzipper": "^0.10.11",
        "yargs": "^17.7.2"
    },
    "engines": {
        "node": ">=14.0.0"
    },
    "keywords": [
        "epub",
        "optimizer",
        "compression",
        "minification",
        "ebook"
    ],
    "devDependencies": {
        "@biomejs/biome": "^1.9.4"
    }
}